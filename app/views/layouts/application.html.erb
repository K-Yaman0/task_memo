<!DOCTYPE html>
<html>
  <head>
    <title>タスク管理</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="header">
      <%= link_to 'タスクメモアプリ', root_path, class: "title" %>
      <ul class='lists'>
        <% if user_signed_in? %>
          <%= link_to "#" do %>
            <li class="user-name"><%= current_user.nickname %> で<br>ログイン中</li>
          <% end %>
          <%= link_to destroy_user_session_path , data: {turbo_method: :delete} do %>
            <li class="logout-btn">ログアウト</li>
          <% end %>

        <% else %>
          <%= link_to new_user_session_path do %>
            <li class="login-btn">ログイン</li>
          <% end %>
          <%= link_to new_user_registration_path do %>
            <li class="sign-up-btn">新規登録</li>
          <% end %>
        <% end %>
      </ul> 
    </div>
    <%= yield %>
  </body>
</html>
