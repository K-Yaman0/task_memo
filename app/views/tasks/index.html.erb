<h1>トップページ</h1>
<div class="post">
  <%= link_to '投稿する', new_task_path, class: "post-btn" %>
</div>
<ul>
  <% @tasks.each do |task| %>
    <div class="task-contents">
      <%= link_to task_path(task.id) do %>
        <div class="task-content">
          <%= task.content %>
        </div>
      <% end %>
      <span><%= image_tag 'arrow_top.png', id: "pull-down-lists" %></span>
      <ul class="hidden" id=<%= task.id%>>
        <li><%= link_to '編集する', edit_task_path(task) %></li>
      </ul>
    </div>
  <% end %>
</ul>
